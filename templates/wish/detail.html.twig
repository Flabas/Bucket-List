{% extends 'base.html.twig' %}

{% block title %}Détail idée #{{ wish.id }} - Bucket-List{% endblock %}

{% block body %}
<div class="py-4">
    <div class="mb-3">
        <a href="{{ path('app_wish_list') }}" class="btn btn-outline-secondary btn-sm">← Retour à la liste</a>
    </div>

    <div class="card">
        {% if wish.image %}
            <div class="ratio ratio-16x9">
                <img src="{{ asset('uploads/' ~ wish.image) }}"
                     alt="{{ wish.title }}"
                     class="img-fluid rounded-top"
                     style="object-fit: cover; width: 100%; height: 100%;">
            </div>
        {% endif %}
        <div class="card-body">
            <h1 class="h3">{{ wish.title }}</h1>
            <div class="d-flex flex-wrap gap-2 my-2">
                <span class="badge text-bg-light">{{ wish.author }}</span>
                <span class="badge text-bg-light">{{ wish.dateCreated|date('d/m/Y H:i') }}</span>
                {% if wish.category %}
                    <span class="badge text-bg-light">{{ wish.category.name }}</span>
                {% endif %}
            </div>
            <p class="mb-0">{{ wish.description ?? 'Aucune description.' }}</p>

            <div class="d-flex gap-2 mt-3">
                {% if wish.author == app.user.pseudo %}
                <a href="{{ path('app_wish_edit', { id: wish.id }) }}" class="btn btn-primary">Modifier l'idée</a>
                {% endif %}
                {% if wish.author == app.user.pseudo or app.user.roles is defined and 'ROLE_ADMIN' in app.user.roles %}
                <form action="{{ path('app_wish_delete', { id: wish.id }) }}" method="post" onsubmit="return confirm('Confirmer la suppression ?');" class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete_wish_' ~ wish.id) }}">
                    <button type="submit" class="btn btn-outline-danger">Supprimer</button>
                </form>
                {% endif %}
            </div>

        </div>
    </div>
</div>
{% endblock %}
