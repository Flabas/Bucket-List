{% extends 'base.html.twig' %}

{% block title %}Détail idée #{{ wish.id }} - Bucket-List{% endblock %}

{% block body %}
<div class="py-4">
    <div class="mb-3">
        <a href="{{ path('app_wish_list') }}" class="btn btn-outline-secondary btn-sm">← Retour à la liste</a>
    </div>

    <div class="card mb-4">
        {% if wish.image %}
            <div class="ratio ratio-16x9">
                <img src="{{ asset('uploads/' ~ wish.image) }}"
                     alt="{{ wish.title }}"
                     class="img-fluid rounded-top"
                     style="object-fit: cover; width: 100%; height: 100%;">
            </div>
        {% endif %}
        <div class="card-body">
            <h1 class="h3">{{ wish.title }}</h1>
            <div class="d-flex flex-wrap gap-2 my-2">
                <span class="badge text-bg-light">{{ wish.author }}</span>
                <span class="badge text-bg-light">{{ wish.dateCreated|date('d/m/Y H:i') }}</span>
                {% if wish.category %}
                    <span class="badge text-bg-light">{{ wish.category.name }}</span>
                {% endif %}
            </div>
            <p class="mb-0">{{ wish.description ?? 'Aucune description.' }}</p>

            <div class="d-flex gap-2 mt-3">
                {% if app.user and wish.author == app.user.pseudo %}
                <a href="{{ path('app_wish_edit', { id: wish.id }) }}" class="btn btn-primary">Modifier l'idée</a>
                {% endif %}
                {% if app.user and (wish.author == app.user.pseudo or ('ROLE_ADMIN' in app.user.roles)) %}
                <form action="{{ path('app_wish_delete', { id: wish.id }) }}" method="post" onsubmit="return confirm('Confirmer la suppression ?');" class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete_wish_' ~ wish.id) }}">
                    <button type="submit" class="btn btn-outline-danger">Supprimer</button>
                </form>
                {% endif %}
            </div>

        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h2 class="h5 mb-3">Commentaires</h2>

            {% if comments is defined and comments is not empty %}
                <div class="list-group mb-3">
                    {% for c in comments %}
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between align-items-start flex-wrap gap-2">
                                <div>
                                    <strong>{{ c.author.pseudo }}</strong>
                                    <small class="text-muted">• {{ c.createdAt|date('d/m/Y H:i') }}</small>
                                </div>
                                <div class="text-warning" aria-label="Note: {{ c.rating }}/5">
                                    {% for i in 1..5 %}
                                        {% if i <= c.rating %}&#9733;{% else %}&#9734;{% endif %}
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="mt-2">{{ c.content }}</div>
                            <div class="mt-2 d-flex gap-2">
                                {% if app.user and c.author.id == app.user.id %}
                                    <a class="btn btn-sm btn-outline-secondary" href="{{ path('app_comment_edit', { id: c.id }) }}">Modifier</a>
                                {% endif %}
                                {% if app.user and (c.author.id == app.user.id or ('ROLE_ADMIN' in app.user.roles)) %}
                                    <form action="{{ path('app_comment_delete', { id: c.id }) }}" method="post" onsubmit="return confirm('Supprimer ce commentaire ?');" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete_comment_' ~ c.id) }}">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Supprimer</button>
                                    </form>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="alert alert-light">Aucun commentaire pour le moment.</div>
            {% endif %}

            {% if app.user and app.user.pseudo != wish.author %}
                <hr>
                <h3 class="h6 mb-3">Ajouter un commentaire</h3>
                <form action="{{ path('app_comment_add', { id: wish.id }) }}" method="post">
                    <input type="hidden" name="_token" value="{{ csrf_token('add_comment_' ~ wish.id) }}">
                    <div class="row g-3 align-items-center">
                        <div class="col-sm-3">
                            <label for="rating" class="col-form-label">Note</label>
                            <select id="rating" name="rating" class="form-select" required>
                                {% for i in 1..5 %}
                                    <option value="{{ i }}">{{ i }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-sm-9">
                            <label for="content" class="form-label visually-hidden">Commentaire</label>
                            <textarea id="content" name="content" class="form-control" rows="3" placeholder="Votre commentaire…" required>{{ app.request.request.get('content') }}</textarea>
                        </div>
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">Publier</button>
                    </div>
                </form>
            {% elseif not app.user %}
                <div class="alert alert-info mb-0">Connectez-vous pour ajouter un commentaire.</div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
