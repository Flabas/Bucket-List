{% extends 'base.html.twig' %}

{% block title %}Id√©es - Bucket-List{% endblock %}

{% block body %}
<div class="py-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h1 class="h3 mb-0">üìù Liste des id√©es</h1>
        <a href="{{ path('app_wish_formWish') }}" class="btn btn-primary">Ajouter une id√©e</a>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <form method="get" action="{{ path('app_wish_list') }}" class="row g-3 align-items-end">
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <label for="q" class="form-label">Rechercher</label>
                    <input id="q" type="search" name="q" class="form-control" placeholder="Rechercher une id√©e..." value="{{ q|default('') }}">
                </div>
                <div class="col-sm-6 col-md-3 col-lg-3">
                    <label for="author" class="form-label">Auteur</label>
                    <select id="author" name="author" class="form-select">
                        <option value="">Tous les auteurs</option>
                        {% for a in authors %}
                            <option value="{{ a }}" {% if author is defined and author == a %}selected{% endif %}>{{ a }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-sm-6 col-md-3 col-lg-3">
                    <label for="order" class="form-label">Date</label>
                    <select id="order" name="order" class="form-select">
                        <option value="DESC" {% if order|upper == 'DESC' %}selected{% endif %}>Plus r√©centes d'abord</option>
                        <option value="ASC" {% if order|upper == 'ASC' %}selected{% endif %}>Plus anciennes d'abord</option>
                    </select>
                </div>
                <div class="col-sm-6 col-md-2 col-lg-3">
                    <button type="submit" class="btn btn-primary w-100">Filtrer</button>
                </div>
                {% if q or author or (order and order != 'DESC') %}
                    <div class="col-12">
                        <a href="{{ path('app_wish_list') }}" class="btn btn-outline-secondary btn-sm">R√©initialiser les filtres</a>
                    </div>
                {% endif %}
            </form>
        </div>
    </div>

    {% if wishes is not defined or wishes is empty %}
        <div class="alert alert-info">Aucune id√©e trouv√©e{% if q is defined and q %} pour ¬´ {{ q }} ¬ª{% endif %}.</div>
    {% else %}
        {% if q is defined and q or author is defined and author or order is defined and order %}
            <p class="text-secondary mb-3">
                {% set parts = [] %}
                {% if q %}{% set parts = parts|merge(['<span class="badge text-bg-light">¬´ ' ~ q ~ ' ¬ª</span>']) %}{% endif %}
                {% if author %}{% set parts = parts|merge(['<span class="badge text-bg-light">auteur: ' ~ author ~ '</span>']) %}{% endif %}
                {% if order %}{% set parts = parts|merge(['<span class="badge text-bg-light">tri: ' ~ (order == 'ASC' ? 'plus anciennes' : 'plus r√©centes') ~ '</span>']) %}{% endif %}
                Filtres: {{ parts|join(' ')|raw }} ‚Äî {{ wishes|length }} id√©e(s)
            </p>
        {% endif %}

        <div class="row g-3">
            {% for wish in wishes %}
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100">
                        {% if wish.image %}
                            <div class="ratio ratio-16x9">
                                <img src="{{ asset('uploads/' ~ wish.image) }}"
                                     alt="{{ wish.title }}"
                                     class="img-fluid rounded-top"
                                     style="object-fit: cover; width: 100%; height: 100%;">
                            </div>
                        {% endif %}
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title mb-2"><a href="{{ path('app_wish_detail', { id: wish.id }) }}" class="stretched-link text-decoration-none">{{ wish.title }}</a></h5>
                            <div class="d-flex flex-wrap gap-2 mb-2">
                                <span class="badge text-bg-light">{{ wish.author }}</span>
                                <span class="badge text-bg-light">{{ wish.dateCreated|date('d/m/Y') }}</span>
                                {% if wish.category %}
                                    <span class="badge text-bg-light">{{ wish.category.name }}</span>
                                {% endif %}
                            </div>
                            {% if wish.description %}
                                <p class="card-text text-secondary">{{ wish.description }}</p>
                            {% endif %}
                        </div>
                        <div class="card-footer bg-transparent border-0 pt-0 pb-3 px-3 d-flex justify-content-end">
                            <a href="{{ path('app_wish_detail', { id: wish.id }) }}" class="btn btn-sm btn-outline-primary">üîé D√©tails</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        {% if totalPages > 1 %}
        <nav class="mt-4 d-flex justify-content-center" aria-label="Pagination">
            <ul class="pagination pagination-lg gap-1">
                <li class="page-item {% if page == 1 %}disabled{% endif %}">
                    <a class="page-link" href="{{ path('app_wish_list', { q: q, author: author, order: order, page: page - 1 }) }}">&laquo;</a>
                </li>
                {% for p in 1..totalPages %}
                    <li class="page-item {% if p == page %}active{% endif %}">
                        <a class="page-link" href="{{ path('app_wish_list', { q: q, author: author, order: order, page: p }) }}">{{ p }}</a>
                    </li>
                {% endfor %}
                <li class="page-item {% if page == totalPages %}disabled{% endif %}">
                    <a class="page-link" href="{{ path('app_wish_list', { q: q, author: author, order: order, page: page + 1 }) }}">&raquo;</a>
                </li>
            </ul>
        </nav>
        {% endif %}
    {% endif %}
</div>
{% endblock %}
