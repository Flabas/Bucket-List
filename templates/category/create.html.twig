{% extends 'base.html.twig' %}

{% block title %}Créer une catégorie - Bucket-List{% endblock %}

{% block body %}
<div class="py-4 page-enter">
    <!-- Header de la page -->
    <div class="page-header glass-effect p-4 mb-5 position-relative overflow-hidden">
        <div class="header-background"></div>
        <div class="d-flex align-items-center gap-3 position-relative">
            <a href="{{ path('app_category_list') }}"
               class="btn btn-outline-secondary custom-btn-outline hover-scale animate-fade-in-up">
                <i class="fas fa-arrow-left me-2"></i>
                Retour
            </a>
            <h1 class="page-title h2 mb-0 d-flex align-items-center gap-3 text-gradient animate-fade-in-up" style="animation-delay: 0.1s;">
                <div class="page-icon">
                    <i class="fas fa-plus-circle"></i>
                </div>
                Créer une catégorie
            </h1>
        </div>
    </div>

    <!-- Formulaire de création -->
    <div class="form-section">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-6">
                <div class="card custom-card border-0 hover-lift">
                    <div class="card-header custom-card-header">
                        <i class="fas fa-folder-plus me-2"></i>
                        Nouvelle catégorie
                    </div>
                    <div class="card-body p-4">
                        <form method="post" class="category-form">
                            <input type="hidden" name="_token" value="{{ csrf_token('create_category') }}">

                            <!-- Champ nom -->
                            <div class="form-group mb-4">
                                <label for="name" class="form-label custom-label">
                                    <i class="fas fa-tag me-2"></i>
                                    Nom de la catégorie
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-folder"></i>
                                    </span>
                                    <input type="text"
                                           id="name"
                                           name="name"
                                           class="form-control custom-input"
                                           placeholder="Entrez le nom de la catégorie..."
                                           required
                                           maxlength="255"
                                           autocomplete="off">
                                </div>
                                <div class="form-text text-muted mt-2">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Le nom doit être unique et descriptif (maximum 255 caractères)
                                </div>
                            </div>

                            <!-- Exemples -->
                            <div class="examples-section mb-4">
                                <h6 class="text-gradient mb-3">
                                    <i class="fas fa-lightbulb me-2"></i>
                                    Exemples de catégories
                                </h6>
                                <div class="row g-2">
                                    <div class="col-md-6">
                                        <div class="example-item p-2 rounded glass-effect">
                                            <i class="fas fa-plane text-primary me-2"></i>
                                            <small>Voyage</small>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="example-item p-2 rounded glass-effect">
                                            <i class="fas fa-dumbbell text-success me-2"></i>
                                            <small>Sport</small>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="example-item p-2 rounded glass-effect">
                                            <i class="fas fa-palette text-warning me-2"></i>
                                            <small>Créativité</small>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="example-item p-2 rounded glass-effect">
                                            <i class="fas fa-graduation-cap text-info me-2"></i>
                                            <small>Apprentissage</small>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Boutons d'action -->
                            <div class="form-actions d-flex gap-3 justify-content-end">
                                <a href="{{ path('app_category_list') }}"
                                   class="btn btn-outline-secondary custom-btn-outline hover-scale">
                                    <i class="fas fa-times me-2"></i>
                                    Annuler
                                </a>
                                <button type="submit"
                                        class="btn btn-primary custom-btn-primary hover-lift">
                                    <i class="fas fa-save me-2"></i>
                                    Créer la catégorie
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Aide -->
                <div class="help-section mt-4">
                    <div class="card custom-card border-0">
                        <div class="card-body p-3">
                            <div class="d-flex align-items-start gap-3">
                                <div class="help-icon">
                                    <i class="fas fa-question-circle text-primary"></i>
                                </div>
                                <div class="help-content">
                                    <h6 class="mb-2 text-gradient">Conseils pour créer une catégorie</h6>
                                    <ul class="help-list text-muted mb-0">
                                        <li>Choisissez un nom court et descriptif</li>
                                        <li>Évitez les doublons avec les catégories existantes</li>
                                        <li>Pensez à l'organisation future de vos idées</li>
                                        <li>Utilisez des termes génériques pour une meilleure classification</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Focus automatique sur le champ nom
    document.getElementById('name').focus();

    // Animation des exemples au clic
    document.querySelectorAll('.example-item').forEach(item => {
        item.addEventListener('click', function() {
            const text = this.textContent.trim();
            document.getElementById('name').value = text;
            document.getElementById('name').focus();
        });
    });

    // Validation en temps réel
    const nameInput = document.getElementById('name');
    nameInput.addEventListener('input', function() {
        if (this.value.length > 0) {
            this.classList.add('is-valid');
            this.classList.remove('is-invalid');
        } else {
            this.classList.remove('is-valid');
            this.classList.add('is-invalid');
        }
    });
});
</script>
{% endblock %}
