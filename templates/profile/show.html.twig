{% extends 'base.html.twig' %}

{% block title %}Mon profil - Bucket-List{% endblock %}

{% block body %}
<div class="py-4 page-enter">
    <!-- Header de la page -->
    <div class="page-header glass-effect p-4 mb-5 position-relative overflow-hidden">
        <div class="header-background"></div>
        <div class="d-flex align-items-center justify-content-between position-relative">
            <h1 class="page-title h2 mb-0 d-flex align-items-center gap-3 text-gradient animate-fade-in-up">
                <div class="page-icon">
                    <i class="fas fa-user-circle"></i>
                </div>
                Mon profil
            </h1>
            <a href="{{ path('app_profile_edit') }}" class="btn btn-primary custom-btn-primary hover-lift animate-fade-in-up" style="animation-delay: 0.2s;">
                <i class="fas fa-edit me-2"></i>
                Modifier mon profil
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Informations principales -->
        <div class="col-lg-8">
            <div class="card custom-card border-0 hover-lift mb-4">
                <div class="card-header custom-card-header">
                    <i class="fas fa-id-card me-2"></i>
                    Informations personnelles
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="profile-field">
                                <label class="profile-label">
                                    <i class="fas fa-user me-2 text-primary"></i>
                                    Pseudo
                                </label>
                                <div class="profile-value">{{ user.pseudo }}</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="profile-field">
                                <label class="profile-label">
                                    <i class="fas fa-envelope me-2 text-primary"></i>
                                    Adresse email
                                </label>
                                <div class="profile-value">{{ user.email }}</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="profile-field">
                                <label class="profile-label">
                                    <i class="fas fa-calendar me-2 text-primary"></i>
                                    Membre depuis
                                </label>
                                <div class="profile-value">
                                    {% if user.createdAt is defined %}
                                        {{ user.createdAt|date('d/m/Y') }}
                                    {% else %}
                                        Date non disponible
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="profile-field">
                                <label class="profile-label">
                                    <i class="fas fa-shield-alt me-2 text-primary"></i>
                                    Statut
                                </label>
                                <div class="profile-value">
                                    {% if 'ROLE_ADMIN' in user.roles %}
                                        <span class="badge bg-danger custom-badge">
                                            <i class="fas fa-crown me-1"></i>
                                            Administrateur
                                        </span>
                                    {% else %}
                                        <span class="badge bg-success custom-badge">
                                            <i class="fas fa-user me-1"></i>
                                            Utilisateur
                                        </span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistiques et actions -->
        <div class="col-lg-4">
            <!-- Avatar et résumé -->
            <div class="card custom-card border-0 hover-lift mb-4">
                <div class="card-body text-center p-4">
                    <div class="profile-avatar mb-3">
                        <i class="fas fa-user-circle"></i>
                    </div>
                    <h5 class="text-gradient mb-2">{{ user.pseudo }}</h5>
                    <p class="text-muted mb-3">{{ user.email }}</p>
                    <div class="profile-actions d-flex gap-2 justify-content-center">
                        <a href="{{ path('app_profile_edit') }}" class="btn btn-outline-primary custom-btn-outline btn-sm hover-scale">
                            <i class="fas fa-edit me-1"></i>
                            Modifier
                        </a>
                        <a href="{{ path('app_wish_list') }}" class="btn btn-outline-secondary custom-btn-outline btn-sm hover-scale">
                            <i class="fas fa-lightbulb me-1"></i>
                            Mes idées
                        </a>
                    </div>
                </div>
            </div>

            <!-- Statistiques rapides -->
            <div class="card custom-card border-0 hover-lift">
                <div class="card-header custom-card-header">
                    <i class="fas fa-chart-bar me-2"></i>
                    Mes statistiques
                </div>
                <div class="card-body p-3">
                    <div class="stat-item d-flex align-items-center justify-content-between py-2">
                        <div class="d-flex align-items-center gap-2">
                            <i class="fas fa-lightbulb text-warning"></i>
                            <span>Idées créées</span>
                        </div>
                        <span class="badge bg-warning">
                            {{ user.wishes is defined ? user.wishes|length : 0 }}
                        </span>
                    </div>
                    <div class="stat-item d-flex align-items-center justify-content-between py-2">
                        <div class="d-flex align-items-center gap-2">
                            <i class="fas fa-comments text-info"></i>
                            <span>Commentaires</span>
                        </div>
                        <span class="badge bg-info">
                            {{ user.comments is defined ? user.comments|length : 0 }}
                        </span>
                    </div>
                    <div class="stat-item d-flex align-items-center justify-content-between py-2">
                        <div class="d-flex align-items-center gap-2">
                            <i class="fas fa-calendar text-success"></i>
                            <span>Connexions</span>
                        </div>
                        <span class="badge bg-success">Actif</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions rapides -->
    <div class="quick-actions mt-5">
        <div class="card custom-card border-0">
            <div class="card-header custom-card-header">
                <i class="fas fa-bolt me-2"></i>
                Actions rapides
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-4">
                        <a href="{{ path('app_profile_edit') }}"
                           class="action-card d-block text-decoration-none p-3 rounded hover-lift">
                            <div class="d-flex align-items-center gap-3">
                                <div class="action-icon">
                                    <i class="fas fa-user-edit"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1 text-gradient">Modifier le profil</h6>
                                    <small class="text-muted">Changer pseudo, email ou mot de passe</small>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="{{ path('app_wish_list') }}"
                           class="action-card d-block text-decoration-none p-3 rounded hover-lift">
                            <div class="d-flex align-items-center gap-3">
                                <div class="action-icon">
                                    <i class="fas fa-lightbulb"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1 text-gradient">Mes idées</h6>
                                    <small class="text-muted">Voir toutes mes idées créées</small>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="{{ path('app_wish_formWish') }}"
                           class="action-card d-block text-decoration-none p-3 rounded hover-lift">
                            <div class="d-flex align-items-center gap-3">
                                <div class="action-icon">
                                    <i class="fas fa-plus-circle"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1 text-gradient">Nouvelle idée</h6>
                                    <small class="text-muted">Ajouter une nouvelle idée</small>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
