{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <div class="mb-3">
                            <i class="fas fa-key fa-3x text-primary"></i>
                        </div>
                        <h2 class="card-title">Mot de passe oublié ?</h2>
                        <p class="text-muted">
                            Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                        </p>
                    </div>

                    {% for flash_error in app.flashes('reset_password_error') %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            {{ flash_error }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endfor %}

                    {{ form_start(requestForm, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
                        <div class="mb-4">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-envelope text-muted"></i>
                                </span>
                                {{ form_widget(requestForm.email, {
                                    'attr': {
                                        'class': 'form-control form-control-lg',
                                        'placeholder': 'Votre adresse email'
                                    },
                                    'label': false
                                }) }}
                            </div>
                            {{ form_errors(requestForm.email) }}
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-paper-plane me-2"></i>
                                Envoyer le lien de réinitialisation
                            </button>
                        </div>
                    {{ form_end(requestForm) }}

                    <div class="text-center">
                        <a href="{{ path('app_login') }}" class="text-decoration-none">
                            <i class="fas fa-arrow-left me-1"></i>
                            Retour à la connexion
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
