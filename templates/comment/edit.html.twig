{% extends 'base.html.twig' %}
{% block title %}Modifier le commentaire{% endblock %}
{% block body %}
<div class="card shadow-sm border-0">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="h5 mb-0">Modifier le commentaire</h1>
            <a href="{{ path('app_wish_detail', { id: comment.wish.id }) }}" class="btn btn-outline-secondary btn-sm">Retour</a>
        </div>
        <form method="post" novalidate>
            <input type="hidden" name="_token" value="{{ csrf_token('edit_comment_' ~ comment.id) }}">
            <div class="row g-3 align-items-center">
                <div class="col-sm-3">
                    <label for="rating" class="col-form-label">Note</label>
                    <select id="rating" name="rating" class="form-select" required>
                        {% for i in 1..5 %}
                            <option value="{{ i }}" {{ i == comment.rating ? 'selected' }}>{{ i }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-sm-9">
                    <label for="content" class="form-label visually-hidden">Commentaire</label>
                    <textarea id="content" name="content" class="form-control" rows="4" required>{{ app.request.request.get('content') ?? comment.content }}</textarea>
                </div>
            </div>
            <div class="mt-3 d-flex gap-2">
                <button type="submit" class="btn btn-primary">Enregistrer</button>
                <a href="{{ path('app_wish_detail', { id: comment.wish.id }) }}" class="btn btn-outline-secondary">Annuler</a>
            </div>
        </form>
    </div>
</div>
{% endblock %}

